<div class="col-xs-3">
  <h2>投稿</h2>
<div style="margin-bottom: 20px;"></div>
<%= form_for @post do |f| %>
	<%= f.label "タイトル" %><br>
    <%= f.text_field :title %><br>
	<%= f.label "本文" %><br>
    <%= f.text_area :body %><br>
	<%= f.label "天使or悪魔？" %><br>
    <%= f.select :choice, {天使:0,悪魔: 1} %><br>
	<%= f.label "ジャンル" %><br>
    <%= f.collection_select :genre_id, Genre.all, :id, :genre_name %><br>
    <%= f.submit "投稿する"%>
<% end %>
</div>