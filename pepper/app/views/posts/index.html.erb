<%= form_for @post do |f| %>
    <%= f.text_field :title %>
    <%= f.text_field :body %>
    <%= f.select :choice, {天使:0 ,悪魔: 1} %>
    <%= f.collection_select :genre_id, Genre.all, :id, :genre_name %>
    <%= f.submit %>
<% end %>

<% @posts.each do |g| %>
    <%= g.title %>
    <%= g.body %>
    <%= g.choice %>
    <%= g.genre.genre_name %><br>
<% end %>