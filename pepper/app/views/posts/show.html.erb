<div class="row">
	<div class="col-xs-12">

	  	<h2>投稿詳細</h2>

	  	<% if @post.choice == true %>

	  	<%= link_to " スッキリ！", post_path(@post),method: :delete,
	  	"data-confirm" => "本当にスッキリしましたか？",class: 'btn btn-info col-xs-3 col-xs-offset-8' %>
	  	<% end %>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
				  <th>タイトル</th>
				  <th>本文</th>
				  <th>天使or悪魔</th>
				  <th>ジャンル</th>
				</tr>
			 </thead>

			<tbody id="posts">
				   <tr>
					  <td>
					    <%= @post.title %>
					  </td>
					  <td>
					    <%= @post.body %>
					  </td>
					  <td>
					  	<% if @post.choice == true %>
					  		悪魔
					  	<% else %>
					  		天使
					  	<% end %>
					  </td>
					  <td>
						<%= @post.genre.genre_name %>
					  </td>
					</tr>
		</table>
	<% if @post.choice == true %>

		<table class="table table-hover table-inverse">
			<thead>
				<tr>
				  <th>コメント：</th>
				</tr>
			 </thead>
			<tbody>
			<% @comments.each do |c| %>
			<tr>
			 <td><%= c.comment %></td>
			</tr>
			<% end %>
			</tbody>
		</table>

		<h2> Post Comment</h2>

		<%= form_for [@post, @comment] do |f| %>

			<h4>コメント：</h4>
			<%= f.text_area :comment %><br>
			<%= f.submit "コメントする" %>

		<% end %>
	<% end %>

	</div>
</div>

<%= link_to "投稿一覧へ戻る",posts_path %>