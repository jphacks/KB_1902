<h2>タスク</h2>
<table class="table table-hover table-inverse">
			<thead>
			<tr>
                <th>名前</th>
			  <th>タイトル</th>
			  <th>本文</th>
			  <th>天使or悪魔</th>
			  <th>ジャンル</th>
			</tr>
		  </thead>

			<tbody id="posts">
			    <% @user.favos.each do |post| %>
 				   <tr>
                    <td>
                    <%= post.user.name %>
                    </td>
 					  <td>
 					    <%= post.post.title %>
 					  </td>
 					  <td>
 					    <%= post.post.body %>
 					  </td>
 					  <td>
 					  	<% if post.post.choice == true %>
 					  		悪魔
 					  	<% else %>
 					  		天使
 					  	<% end %>
 					  </td>
 					  <td>
 						<%= post.post.genre.genre_name %>
 					  </td>
 					  <td>
                         <%= link_to "show" ,post_path(post.post) %>
 					</tr>
 				<% end %>
		    </tbody>
			</table>
